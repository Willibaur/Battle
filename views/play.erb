<!DOCTYPE html>
<html>
  <body>
    <div>
      <%= @game.player1.name %> vs. <%= @game.player2.name %>
    </div>
    <div>
      <%= @game.player1.name %>: <%= @game.player1.hit_points %>HP
    </div>
    <div>
      <%= @game.player2.name %>: <%= @game.player2.hit_points %>HP
    </div>
    <div>
      <% if @game.player_one_turn %>
      <%= @game.player1.name %>'s turn
      <% else %>
      <%= @game.player2.name %>'s turn
      <% end %>
    </div>
    <div>
      <% if @game.player1.hit_points == 0 %>
      <%= @game.player1.name %> loses
      <% elsif @game.player2.hit_points == 0%>
      <%= @game.player2.name %> loses
      <% end %>
    </div>

    <div>
      <form action="/attack">
       <input type="submit" value="Attack">
      </form>
    </div>
  </body>
</html>
